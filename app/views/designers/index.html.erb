<div class="container">
  <div class="row">
    
    <!-- restaurants list，有多寫restaurant-item的class style -->
    <% @designers.each do |designer| %>
      <div class="col-sm-6 col-md-4">
        <div class="designer-item">
          <%= image_tag designer.image.url,width: "300px", class: "img-responsive center-block" %>
          <div class="caption">
            <h3><%= link_to designer.name, designer_path(designer) %></h3>
            <p><%= truncate(designer.description, length: 80) %></p>
          </div>
        </div>
      </div>
    <% end %>
      

    <!-- 有generate kaminari paginate bootstrap style -->
    <div class="text-center">
    <%= paginate @designers %>
    </div>
      
  </div>
</div>

