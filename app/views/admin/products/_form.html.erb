<% if @product.errors.any? %>
  <h2>We have some errors here !</h2>
  <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>


<%= form_for  [:admin, @designer, @product] do |f| %>
  
  <div class="block-header">
    <h6 class="text-uppercase mb-0">Create New Product</h6>
  </div>
  <div class="block-body">
    <div class="row">
  <div class="form-group col-md-6">
    <%= f.label :category %>
    <%= f.collection_select :category_id, Category.all, :id, :name, {prompt: true}, {class: "form-control"} %>
  </div>
  <div class="form-group col-md-6">
    <%= f.label :size %>
    <%= f.collection_select :size_id, Size.all, :id, :name, {prompt: true}, {class: "form-control"} %>
  </div>
  <div class="form-group col-md-6">
    <%= f.label :color %>
    <%= f.collection_select :color_id, Color.all, :id, :name, {prompt: true}, {class: "form-control"} %>
  </div>
  <div class="form-group col-md-6">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group col-md-6">
    <%= f.label :price, "Price" %>
    <%= f.text_field :price, class: "form-control" %>
  </div>
  <div class="form-group col-md-6">
    <%= f.label :description, "Description" %>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group col-md-6">
    <%= f.label :inventory %>
    <%= f.collection_select :inventory_id, Inventory.all, :id, :name, {prompt: true}, {class: "form-control"} %>
  </div>
  <div class="form-group col-md-6">
    <%= f.label :image, "Photo" %>
    <%= image_tag @product.image.url, width: '300px' if @product.image? %>
    <%= f.file_field :image %>
  </div>
  <div class="form-group col-md-6">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>