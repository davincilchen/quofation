<!-- Hero Section-->
<section class="hero">
  <div class="container">
    <!-- Breadcrumbs -->
    <ol class="breadcrumb justify-content-center">
      <li class="breadcrumb-item">Welcome</a></li>
    </ol>
    <!-- Hero Content-->
    <div class="hero-content pb-5 text-center">
      <h1 class="hero-heading">QuoFation</h1>
      <div class="row">
        <div class="col-xl-8 offset-xl-2">
          <p class="lead text-muted">In Here, You Could Quote Any Fasion You Like.</p>
        </div>
      </div>
    </div>
  </div>
</section>
<%= render "shared/counterClock" %>

<div class="container">
  <div class="row">
    <!-- Grid -->
    <div class="products-grid col-12 sidebar-none">
      <div class="row">
        <!-- Designers -->
        <% @designers.each do |designer| %>
        <div class="col-xl-3 col-lg-4 col-sm-6">
          <div class="product">
            <div class="product-image">
              <%= image_tag designer.image, width: '300px', class: "img-fluid trim" %>
              <div class="product-hover-overlay">
                <%= link_to "", designer_path(designer), class: "product-hover-overlay-link" %>
                <div class="product-hover-overlay-buttons">
                  <%= link_to designer_path(designer), class: "btn btn-dark btn-buy" do%>
                  <i class="fa-search fa"></i>
                  <span class="btn-buy-label ml-2">View</span>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="py-2">
              <h3 class="h6 text-uppercase mb-1">
                <%= link_to designer.name, designer_path(designer) %>
              </h3>
            </div>
          </div>
        </div>
        <% end %>
        <!-- Designers End -->

        <!-- æœ‰generate kaminari paginate bootstrap style -->
        <div class="mr-auto ml-auto">
          <%= paginate @designers %>
        </div>
      </div>
    </div>
  </div>
</div>