<div class="nested-fields">
  <div class="block-header">
    <h6 class="text-uppercase mb-0">Amount Setting</h6>
  </div>
  <div class="block-body">
    <div class="row">
      <div class="form-group col-md-6">
        <%= f.label :size %>
        <%= f.collection_select :size_id, Size.all, :id, :name, {prompt: true}, {class: "form-control"} %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :color %>
        <%= f.collection_select :color_id, Color.all, :id, :name, {prompt: true}, {class: "form-control"} %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :amount %>
        <%= f.number_field :amount, min: 1, in: 1..30, class: "form-control" %>
      </div>
    </div>
    <div>
      <%= link_to_remove_association "Remove Inventory", f, class: "btn btn-danger" %>
    </div>
  </div>
</div>