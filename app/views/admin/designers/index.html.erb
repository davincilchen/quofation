<h1>設計師後台</h1>

<h2>Designer List</h2>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>BrandName</th>
            <th>Description</th>
            <th>Function</th>
          </tr>
        </thead>
        <tbody>
          <% @designers.each do |designer| %>
          <tr>
            <th scope="row"><%= designer.id %></th>
            <td><%= link_to designer.name, admin_designer_path(designer) %></td>
            <td><%= designer.brandname %></td>
            <td><%= designer.description %></td>
            <td>
              <%= link_to 'Edit', edit_admin_designer_path(designer) %>
              <%= link_to 'Delete', admin_designer_path(designer), method: :delete, data: {confirm:"確定刪除嗎？"} %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

<%= link_to 'New Designer', new_admin_designer_path %>
<div class="text-center">
  <%= paginate @designers %>
</div>