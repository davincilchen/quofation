<div class="container">
  <h1>Clothing category classification</h1>
  <div class="row">
    <div>
      <%= link_to 'Product', admin_designer_path(@designer) %> |
      <%= link_to 'Categories', admin_designer_categories_path(designer_id: @designer) %>
    </div>
    <br>
    <div class="form-inline">
      <!-- [:admin, @category] :admin 是 namespace 的路徑。 -->
      <%= form_for [:admin, @designer, @category] do |f| %>
      <div class="form-group">
        <%= f.text_field :name, placeholder: "Category Name",  class: "form-control" %>
      </div>
      <%= f.submit class: "btn btn-primary" %>
      <% if @category.errors.any? %>
      <%= @category.errors.full_messages.to_sentence %>
      <% end %>
      <% end %>
    </div>
    <br>
    <div class="col-md-12">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Category Name</th>
            <th>#</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
          <tr>
            <th scope="row">
              <%= category.id %>
            </th>
            <td>
              <%= category.name %>
            </td>
            <td>
              <!-- 因為我們只有index.html.erb，所以這裡的edit我們加上params[:id]到url裡 -->
              <!-- index 就能判斷是edit or new，而印出對應的form表單 -->
              <%= link_to 'Edit', admin_designer_categories_path(id: category.id) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>