<!-- Hero Section-->
<section class="hero">
  <div class="container">
    <!-- Breadcrumbs -->
    <ol class="breadcrumb justify-content-center">
      <li class="breadcrumb-item">
        <%= link_to "Orders", order_path %>
      </li>
      <li class="breadcrumb-item active">Order List</li>
    </ol>
  </div>
  <div class="hero-content pb-5 text-center">
    <h1 class="hero-heading">Order Details</h1>
    <div class="row">
      <div class="col-xl-8 offset-xl-2">
        <p class="lead text-muted">
          Order SN:
          <strong>
            <%= @order.sn %>
          </strong>
        </p>
        <p class="lead text-muted">
          Order created date:
          <strong>
            <%= @order.created_at.strftime("%Y/%m/%d") %>
          </strong>
        </p>
        <p class="lead text-muted">
          Payment Status:
          <span class="badge text-uppercase p-2 <%= @order.payment_status == 'paid' ? 'badge-success' : 'badge-info' %>">
            <%= @order.payment_status.split("_").join(" ") %>
          </span>
        </p>
      </div>
    </div>
  </div>
</section>
<section>
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-xl-12">
        <div class="cart">
          <div class="cart-wrapper">
            <div class="cart-header text-center">
              <div class="row">
                <div class="col-4">Item</div>
                <div class="col-2">Price</div>
                <div class="col-2">Quantity</div>
                <div class="col-2">Total</div>
                <div class="col-2">Shipping Status</div>
              </div>
            </div>
            <div class="cart-body">
              <% @order.order_items.each do |item| %>
              <!-- Product-->
              <div class="cart-item">
                <div class="row d-flex align-items-center text-center">
                  <div class="col-4">
                    <div class="d-flex align-items-center">
                      <%= link_to product_path(item) do %>
                      <%= image_tag item.product.image, class: "cart-item-img" %>
                      <% end %>
                      <div class="cart-title text-left">
                        <%= link_to product_path(item), class: "text-uppercase text-dark" do %>
                        <strong>
                          <%= item.product.name %>
                        </strong>
                        <% end %>
                        <br>
                        <span class="text-muted text-sm">
                          Size:
                          <%= item.size_name %>
                        </span>
                        <br>
                        <span class="text-muted text-sm">
                          Colour:
                          <%= item.color_name.capitalize %>
                        </span>
                      </div>
                    </div>
                  </div>
                  <div class="col-2">$
                    <%= item.price %>
                  </div>
                  <div class="col-2">
                    <%= item.quantity %>
                  </div>
                  <div class="col-2 text-center">
                    $
                    <%= item.item_total %>
                  </div>
                  <div class="col-2">
                    <span class="badge text-uppercase p-2 <%= item.shipping_status == 'shipped' ? 'badge-success' : 'badge-info' %>">
                      <%= item.shipping_status.split("_").join(" ") %>
                    </span>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
          </div>
        </div>
        <div class="row my-5">
          <div class="col-md-6">
            <div class="block mb-5">
              <div class="block-header">
                <h6 class="text-uppercase mb-0">Order Summary</h6>
              </div>
              <div class="block-body bg-light pt-1">
                <p class="text-sm">Shipping and additional costs are calculated based on values you have entered.</p>
                <ul class="order-summary mb-0 list-unstyled">
                  <li class="order-summary-item">
                    <span>Order Subtotal </span>
                    <span>
                      $
                      <%= @order.amount %>
                    </span>
                  </li>
                  <li class="order-summary-item"><span>Shipping and handling</span><span>$0</span></li>
                  <li class="order-summary-item border-0">
                    <span>Total</span>
                    <strong class="order-summary-total">
                      $
                      <%= @order.amount %>
                    </strong>
                  </li>
                </ul>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="block-header">
              <h6 class="text-uppercase mb-0">Shipping address</h6>
            </div>
            <div class="block-body bg-light pt-1">
              <ul class="order-summary mb-0 list-unstyled">
                <li class="order-summary-item">
                  <span>Name: </span>
                  <span>
                    <%= @order.name %>
                  </span>
                </li>
                <li class="order-summary-item">
                  <span>Phone: </span>
                  <span>
                    <%= @order.phone %>
                  </span>
                </li>
                <li class="order-summary-item border-0">
                  <span>Address: </span>
                  <strong class="order-summary-total">
                    <%= @order.address %>
                  </strong>
                </li>
              </ul>
            </div>
          </div>
          <div class="col-md-4">
            <% if @order.payment_status == "not_paid" && @order.order_items.where(shipping_status: "cancelled").size < 1 %>
            <div class="block-header">
              <h6 class="text-uppercase mb-0">Payment Method</h6>
            </div>
            <% Payment::PAYMENT_METHODS.each do |method| %>
            <div class="block-body bg-light pt-1">
              <%= link_to method, checkout_spgateway_order_path(@order, payment_method: method), method: :post, class: "btn btn-outline-dark" %>
            </div>
            <% end %>
            <% end %>
          </div>
          <div class="col-md-5">
            <% if @order.order_items.first.shipping_status == "not_shipped" %>
            <div class="block-header">
              <h6 class="text-uppercase mb-0">Do you want to cancel this order?</h6>
            </div>
            <div class="block-body bg-light pt-1">
              <%= link_to "Cancel Order", order_path(@order), method: :patch, class: "btn btn-outline-danger" %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>