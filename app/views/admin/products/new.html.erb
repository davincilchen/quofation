<%= form_for  [:admin, @designer, @product], url: {action: "create"} do |f| %>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>

  <%= f.label :price, "Price" %>
  <%= f.text_field :price %>

  <%= f.label :description, "Description" %>
  <%= f.text_area :description %>

  <%= f.submit %>
<% end %>