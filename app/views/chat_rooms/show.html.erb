<div class="container">
  <h1><%= @chat_room.title %></h1>

  <div class="mx-auto" style="width: 300px;">
    <%= image_tag @chat_room.product.image.url, width: '300px', class: "img-responsive center-block" %>
  </div>

  <div id="messages" data-chat-room-id="<%= @chat_room.id %>">
    <%= render @chat_room.messages %> 
  </div>

  <%= form_for @message, url: '#' do |f| %>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control' %>
      <small class="text-muted">From 2 to 1000 characters</small>
    </div>

    <%= f.submit "Post", class: 'btn btn-primary btn-lg' %>
  <% end %>

  <%= link_to "Back", user_chat_rooms_path(@chat_room.user) %>
</div>