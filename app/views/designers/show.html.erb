<%= link_to "回首頁", root_path, class: "btn btn-primary" %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @designers.name %></h1>
      
    </div>

    <div class="col-md-4">
      <%= image_tag @designers.image.url,width: "300px", class: "img-responsive center-block" %>
      <br>
      <div class="well">
        <ul class="list-unstyled">
          <li><strong>Designer:</strong> <%= @designers.name %></li>
          <li><strong>Brand:</strong> <%= @designers.brandname %></li>
          
        </ul>
      </div>
    </div>
    <div class="col-md-8">
      <%= simple_format @designers.description %>
    </div>

    <div class="clearfix"></div>

    <hr>

  </div>
</div>

<div class="card-deck">
      <% @products.each do |product| %>
       <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title">
            <h3><%= link_to product.name, product_path(product)%></h3>
          </h5>
          <p class="card-text">
            <%= product.description %>
          </p>
          <a href="#" class="btn btn-primary">ADD TO CART</a>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="text-center">
  <%= paginate @products %>
</div>

